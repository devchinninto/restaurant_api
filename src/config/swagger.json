{
  "openapi": "3.0.1",
  "info": {
    "version": "1.0.0",
    "title": "Restaurant API",
    "description": "API for handling restaurant tables and order processing"
  },
  "servers": {
    "url": "http://localhost:3333",
    "description": "Local server"
  },
  "paths": {
    "/products": {
      "post": {
        "summary": "Create a new product",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Porção de batatas"
                  },
                  "price": {
                    "type": "number",
                    "example": 45.5
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Item registered successfully"
          },
          "400": {
            "description": "Bad request"
          }
        }
      },
      "get": {
        "summary": "Get all products",
        "responses": {
          "200": {
            "description": "List of all the products"
          }
        },
        "content": {
          "application/json": {
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/components/schemas/Product"
              }
            }
          }
        }
      }
    },
    "/products?{name}": {
      "get": {
        "summary": "Get a product by name",
        "parameters": [{
          "name": "name",
          "in": "query",
          "type": "string",
          "example": "Salada"
        }],
        "responses": {
          "200": {
            "description": "The following item(s) matched your search"
          },
          "400": {
            "description": "Item not found"
          }
        }
      }
    },
    "/products/{id}": {
      "put": {
        "summary": "Update a product by ID.",
        "parameters": [{
          "name": "id",
          "in": "path",
          "type": "number",
          "example": 1
        }],
        "responses": {
          "200": {
            "description": "Item updated!"
          },
          "400": {
            "description": "Error updating the item. Verify the information and try again."
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "Refrigerante (lata)"
                  },
                  "price": {
                    "type": "number",
                    "example": 8.5
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Remove a product by ID.",
        "parameters": [{
          "name": "id",
          "in": "path",
          "type": "number",
          "example": 1
        }],
        "responses": {
          "200": {
            "description": "Item removed!"
          },
          "400": {
            "description": "Item not found."
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Product": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "price": {
            "type": "number"
          },
          "created_at": {
            "type": "number"
          },
          "updated_at": {
            "type": "number"
          }
        },
        "example": {
          "id": 1,
          "name": "Porção de batatas",
          "price": 56.5
        }
      }
    }
  }
}